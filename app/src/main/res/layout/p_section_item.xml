<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="410dp"
    android:layout_height="80dp"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/p_item_tl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TSLA"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:width="180dp"/>

            <TextView
                android:id="@+id/p_item_tr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$100.00"
                android:gravity="right"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:width="170dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/p_item_bl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="shares"
                android:textColor="#9F3A3A3A"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:width="180dp"/>

            <ImageView
                android:id="@+id/p_change_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/trending_up"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"/>

            <TextView
                android:id="@+id/p_item_br"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$100.00 (0.00%)"
                android:gravity="right"
                android:textColor="#9F3A3A3A"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:width="120dp"/>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/p_item_img"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/chevron_right"
        android:layout_marginTop="25dp"
        android:layout_marginRight="10dp"
        android:clickable="true"/>
</LinearLayout>